@page "/countries"
@inject IRepository repository
@inject SweetAlertService sweetAlertService

<h3>Paises</h3>

@if (Countries is null)
{
    <div class="spinner" />
}
else
{
    <div class="card">
        <div class="card-header">
            <span>
                <i class="oi oi-globe"></i> Países
                <a class="btn btn-sm btn-outline-primary float-end" href="/countries/create"><i class="oi oi-plus"></i> Adicionar País</a>
            </span>
        </div>
        <div class="card-body">
            @*  <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
                <div>
                    <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar país..." @bind-value="Filter" />
                </div>
                <div class="mx-1">
                    <button type="button" class="btn btn-outline-primary" @onclick="ApplyFilterAsync"><i class="oi oi-layers" /> Filtrar</button>
                    <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync"><i class="oi oi-ban" /> Limpiar</button>
                </div>
            </div>

            <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync" /> *@

            <GenericList MyList="Countries">
                <Body>
                    <!-- Contenedor principal con padding -->
                    <div class="container py-4">
                        <!-- Fila centrada -->
                        <div class="d-flex justify-content-center mt-4">
                            <!-- Columna con ancho automático para que se ajuste a la tabla -->
                            <div class="col-auto">
                                <table class="table table-striped">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center">País</th>
                                            <th class="text-center">Iso2</th>
                                            <th class="text-center">PhoneCode</th>
                                            <th class="text-center" style="width:220px">Estados / Departamentos</th>
                                            <th class="text-center" style="width:260px">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var country in Countries!)
                                        {
                                            <trclass class="d-flex justify-content-center mt-4">
                                                <td>@country.Name</td>
                                                <td>@country.Iso2</td>
                                                <td>@country.PhoneCode</td>
                                                <td>@country.StatesNumber</td>
                                                <td class="text-center">
                                                    <a href="/countries/details/@country.Id" class="btn btn-outline-info btn-sm me-1">
                                                        <i class="oi oi-list"></i> Detalles
                                                    </a>
                                                    <a href="/countries/edit/@country.Id" class="btn btn-outline-warning btn-sm me-1">
                                                        <i class="oi oi-pencil"></i> Editar
                                                    </a>
                                                    <button class="btn btn-outline-danger btn-sm" @onclick="@(() => DeleteAsync(country))">
                                                        <i class="oi oi-trash"></i> Borrar
                                                    </button>
                                                </td>
                                            </trclass>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </Body>
            </GenericList>
        </div>
    </div>

}
